@model Elasticsearch.WebApp.Models.ProductVM
@{
    ViewData["Title"] = "Add Product";
}

<h4>Add Product</h4>
<hr />
<div class="col-md-6">
    <form asp-action="AddProduct" asp-controller="Home">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ProductId" class="control-label"></label>
            <input asp-for="ProductId" class="form-control" readonly />
            <span asp-validation-for="ProductId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ProductName" class="control-label"></label>
            <input asp-for="ProductName" class="form-control" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price" class="control-label"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-row">
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <table>
            <tr>
                <td style="padding-right: 200px">
                    <label asp-for="Colors" class="control-label"></label>
                    <ul>
                        @for (var i = 0; i < Model.Colors.Count; i++)
                        {
                            <li>
                                <input type="checkbox" style="color:@Model.Colors[i].Text" asp-for="@Model.Colors[i].IsChecked" />
                                <label style="color:@Model.Colors[i].Text" asp-for="@Model.Colors[i].IsChecked">@Model.Colors[i].Text</label>
                                <input type="hidden" asp-for="@Model.Colors[i].Text" />
                            </li>
                        }
                    </ul>
                </td>

                <td>
                    <label asp-for="Tags" class="control-label"></label>
                    <ul>
                        @for (var i = 0; i < Model.Tags.Count; i++)
                        {
                            <li>
                                <input type="checkbox" asp-for="@Model.Tags[i].IsChecked" />
                                <label asp-for="@Model.Tags[i].IsChecked">@Model.Tags[i].Text</label>
                                <input type="hidden" asp-for="@Model.Tags[i].Text" />
                            </li>
                        }
                    </ul>
                </td>

            </tr>
        </table>

        <table>
            <tr>
                <td style="padding-right: 50px">
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-outline-info" />
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        <a asp-action="Index" asp-controller="Home" class="btn btn-outline-info"> Back to List</a>
                    </div>
                </td>
            </tr>
        </table>

    </form>
</div>

